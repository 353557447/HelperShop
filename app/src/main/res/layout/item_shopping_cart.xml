<?xml version="1.0" encoding="utf-8"?>
<com.shuiwangzhijia.shuidian.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_100"
            android:layout_toRightOf="@+id/layout_content"
            android:background="@drawable/btn_click_red_havebackground"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#DDFFFFFF" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/font_10">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                android:button="@drawable/bg_check" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_85"
                android:layout_height="@dimen/dp_85"
                android:scaleType="fitXY"
                android:src="@color/color_30adfd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/font_10">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥0"
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/cutBtn"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/bg_cut"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/bg_edit_num"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/addBtn"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/bg_add"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.shuiwangzhijia.shuidian.view.SlidingButtonView>
