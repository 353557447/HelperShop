<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shuiwangzhijia.shuidian.newmodule.activity.EquipMapActivity">

    <RelativeLayout
        android:id="@+id/rlMap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">

        <com.tencent.tencentmap.mapsdk.map.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/locationIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/xuanzeweizhi" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d92">

        <ImageView
            android:id="@+id/euip_iv"
            android:layout_width="@dimen/d70"
            android:layout_height="@dimen/d70"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin16"
            android:layout_toRightOf="@id/euip_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/equip_name"
                style="@style/textBlack13"
                android:text="福能达智能售货机福能达智能售智能售货机" />

            <TextView
                android:id="@+id/equip_address"
                style="@style/textGray11"
                android:layout_marginTop="@dimen/d20"
                android:text="华天广场世纪商城1L20B 拷贝" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
