<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_weight="1"
                    android:text="水店"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/infoState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/choose"
                    android:text="去填写"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_13" />
            </LinearLayout>
        </LinearLayout>

        <TextView style="@style/deviderGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="营业时间"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="开始时间:"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/editStartTime"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/common_yellow_stroke_big_radius_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF4D14"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="结束时间:"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/editEndTime"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/common_yellow_stroke_big_radius_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF4D14"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView style="@style/deviderGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="配送费"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_marginLeft="@dimen/d30"
                    android:id="@+id/freeBtn"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@drawable/bg_yellow_gray"
                    android:gravity="center"
                    android:text="免运费"
                    android:textColor="@drawable/gray_yellow"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/payBtn"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/bg_yellow_gray"
                    android:gravity="center"
                    android:text="运费"
                    android:textColor="@drawable/gray_yellow"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/margin10"
               style="@style/deviderGray" />

            <LinearLayout
                android:id="@+id/llPayInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_35">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="配送费"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />

                    <EditText
                        android:id="@+id/editPayMoney"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/common_yellow_stroke_big_radius_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:numeric="integer"
                        android:text=""
                        android:textColor="#FF4D14"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="元"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_35">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="满免     "
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />

                    <EditText
                        android:id="@+id/editFreeMoney"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/common_yellow_stroke_big_radius_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:numeric="integer"
                        android:text=""
                        android:textColor="#FF4D14"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="元"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="满元免配送费"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_11" />
            </LinearLayout>

        </LinearLayout>

        <TextView
           style="@style/deviderGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="配送效率"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_30">

                <EditText
                    android:id="@+id/editSpeed"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/common_yellow_stroke_big_radius_bg"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textColor="#FF4D14"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text="km/h"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/deviderGray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="配送范围"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_30">

                <EditText
                    android:id="@+id/editSpeedDistance"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/common_yellow_stroke_big_radius_bg"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textColor="#FF4D14"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text="千米"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/deviderGray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/font_15" />


            <EditText
                android:id="@+id/editHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_solid_five_radius_bg"
                android:gravity="left"
                android:maxEms="300"
                android:maxLength="300"
                android:minHeight="@dimen/dp_85"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:text=""
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_12" />

            <TextView
                android:visibility="gone"
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_e5e5e5"
                android:gravity="center_vertical|right"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="300"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/dark_blue_fifteen_radius_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
</ScrollView>