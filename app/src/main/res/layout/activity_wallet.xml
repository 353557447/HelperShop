<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/color_30adfd">

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginTop="@dimen/dp_30"
            android:text="账户余额(元)"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/unit"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginTop="@dimen/dp_30"
            android:text="88888"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_28"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:background="#33000000"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llCash"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/tixian"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="我要提现"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_ffffff" />

            <LinearLayout
                android:id="@+id/llDetail"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/tixianjilu"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="消费明细"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/shuipiao"
            android:drawablePadding="@dimen/dp_10"
            android:text="我的水票"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_15" />

        <TextView
            android:id="@+id/ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/choose"
            android:gravity="center_vertical|right"
            android:text="可使用水票0张"
            android:textColor="@color/color_ff3939"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</LinearLayout>