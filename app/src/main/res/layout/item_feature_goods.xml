<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding16"
        android:paddingRight="@dimen/padding16">

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="@dimen/d81"
            android:layout_height="@dimen/d81"
            android:layout_centerVertical="true"
             />

        <TextView
            android:id="@+id/goods_name"
            style="@style/textBlack14"
            android:layout_alignTop="@id/goods_iv"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_toRightOf="@id/goods_iv"
            android:lines="2"
            android:text="美汁源果粒橙 橙汁饮料1.25L*6瓶 可 口可乐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_name"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin3"
            android:layout_toRightOf="@id/goods_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="@dimen/margin10"
                android:visibility="gone"
                android:id="@+id/return_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_two_radius_bg"
                android:paddingLeft="@dimen/padding10"
                android:paddingTop="@dimen/padding3"
                android:paddingRight="@dimen/padding10"
                android:paddingBottom="@dimen/padding3"
                android:text="返利"
                android:textColor="@color/textRed"
                android:textSize="@dimen/d10" />

            <TextView
                android:visibility="gone"
                android:id="@+id/full_discounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_two_radius_bg"
                android:paddingLeft="@dimen/padding10"
                android:paddingTop="@dimen/padding3"
                android:paddingRight="@dimen/padding10"
                android:paddingBottom="@dimen/padding3"
                android:text="满20减5元"
                android:textColor="@color/textRed"
                android:textSize="@dimen/d10" />

        </LinearLayout>

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/goods_iv"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_toRightOf="@id/goods_iv"
            android:text="￥20.00"
            android:textColor="@color/textRed"
            android:textSize="@dimen/d15"
            android:textStyle="bold" />

        <ImageView
            android:src="@drawable/join_shoppingcart_icon"
            android:id="@+id/join_to_shoppingcart"
            android:layout_width="@dimen/d23"
            android:layout_height="@dimen/d23"
            android:layout_alignBottom="@id/goods_iv"
            android:layout_alignParentRight="true"
             />
    </RelativeLayout>
</android.support.v7.widget.CardView>