<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBDBFC"
    android:orientation="vertical"
    tools:context="com.shuiwangzhijia.shuidian.newmodule.activity.EquipDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d88"
        android:background="#56688C"
        android:paddingLeft="@dimen/padding16"
        android:paddingRight="@dimen/padding16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/equip_name"
                    style="@style/textWhite15"
                    android:layout_centerVertical="true"
                    android:text="设备名称："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/one_key_open"
                    style="@style/textWhite12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yellow_solid_big_radius_bg"
                    android:paddingBottom="@dimen/padding3"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="@dimen/padding3"
                    android:text="一键开柜" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/equip_id"
                    style="@style/textWhite15"
                    android:layout_centerVertical="true"
                    android:text="设备ID："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/all_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yellow_stroke_big_radius_bg"
                    android:paddingBottom="@dimen/padding3"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="@dimen/padding3"
                    android:text="全选"
                    android:textColor="#FFA200"
                    android:textSize="@dimen/d12" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d50"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
