<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_30adfd"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/msgBtn"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_7"
                android:src="@drawable/xiaoxi" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="管理"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/setBtn"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@drawable/shezhi" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:background="@color/color_ffffff">

            <ImageView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:scaleType="fitXY"
                android:src="@drawable/fengjing" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:scaleType="centerCrop"
                android:src="@drawable/morenshuidian" />


            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginLeft="@dimen/dp_40"
                android:ellipsize="end"
                android:maxLength="15"
                android:text="dfaf"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14" />

            <Switch
                android:id="@+id/mSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:switchMinWidth="50dp"
                android:textOff="  "
                android:textOn="  "
                android:thumb="@drawable/thumb"
                android:track="@drawable/track" />

            <TextView
                android:id="@+id/onOrOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toLeftOf="@+id/mSwitch"
                android:drawableLeft="@drawable/point_green_gray"
                android:drawablePadding="@dimen/dp_5"
                android:text="营业中"
                android:textColor="@drawable/gray_green"
                android:textSize="@dimen/font_14" />


            <TextView
                android:id="@+id/shopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopName"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_40"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="深圳市"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_11" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ticket_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="优惠水票,快来抢购"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_13" />

            <com.shuiwangzhijia.shuidian.view.VerticalTextView
                android:id="@+id/verticalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="哈哈哈"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15">

            <RelativeLayout
                android:id="@+id/buyBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/caigoudingdan"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="采购订单"
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_12" />
            </RelativeLayout>

            <View style="@style/line_vertical" />

            <RelativeLayout
                android:id="@+id/sailBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shoumaidingdan"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="零售订单"
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_12" />
            </RelativeLayout>


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>