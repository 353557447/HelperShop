<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/d5"
    app:cardCornerRadius="@dimen/d5">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/d12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/d14"
        android:textStyle="bold"
        android:textColor="#FF4D14"
        android:id="@+id/rm_type"
        android:text="单笔返利"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="规则"
            android:layout_centerVertical="true"
            style="@style/textGray13" />
    </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/d12"
            android:id="@+id/rm_type_hint"
            android:text="每笔已完成订单三天后可结算"
            style="@style/textGray12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/textRed"
                    android:textSize="@dimen/d13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="待返利订单"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/d12" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="@dimen/d19"
                android:layout_gravity="center_vertical"
                android:background="@color/textRed" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0.00"
                    android:textColor="@color/textRed"
                    android:textSize="@dimen/d13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="待返利金额"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/d12" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="@dimen/d19"
                android:layout_gravity="center_vertical"
                android:background="@color/textRed" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r_water_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/textRed"
                    android:textSize="@dimen/d13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="待返利水票"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/d12" />
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/margin8"
            android:padding="@dimen/d12"
            android:background="#E4E1E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/already_return"
                android:text="已返利 金额:135.00 水票:23"
                android:textColor="@color/textGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="@dimen/padding10"
                android:paddingLeft="@dimen/padding10"
                android:layout_alignParentRight="true"
                android:id="@+id/lijijiesuan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d25"
                android:background="@drawable/common_yellow_stroke_bg"
                android:gravity="center"
                android:text="立即结算"
                android:textColor="#FF4D14"
                android:textSize="@dimen/font_14" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>