<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <TextView
        android:id="@+id/money"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/coupon_bg"
        android:gravity="center"
        android:text="满120元可用"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_12" />

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/color_ffffff"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_10"
                android:text="仅限[景田]品牌商品"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <jp.shts.android.library.TriangleLabelView
                android:id="@+id/labelView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:backgroundColor="#4D5C82"
                app:corner="rightTop"
                app:labelBottomPadding="5dp"
                app:labelCenterPadding="0dp"
                app:labelTopPadding="20dp"
                app:primaryText="平台券"
                app:primaryTextColor="@color/color_ffffff"
                app:primaryTextSize="10sp"
                app:secondaryText="  "
                app:secondaryTextColor="@color/color_ffffff"
                app:secondaryTextSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/switch_selector"
            android:text="营业中"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@drawable/gray_green"
            android:textSize="@dimen/font_12"
            />

        <TextView
            android:id="@+id/turnBtn"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/gray_rectangle"
            android:gravity="center"
            android:text="赠送"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_10"
            android:text="有效期：2018.09.29~2018.10.07"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/dot_line" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/queren"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="详细信息"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_10" />
    </LinearLayout>
</LinearLayout>