<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_solid_five_radius_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:textStyle="bold"
            android:id="@+id/orderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号:12531646131634613133131"
            android:textColor="#333333"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C96FB"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:text="下单时间:2017-8-21 12:30:50"
        android:textColor="#323232"
        android:textSize="@dimen/font_12" />
    <TextView
        android:id="@+id/ordertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="订单类型:"
        android:textColor="#323232"
        android:textSize="@dimen/font_12" />
    <TextView
        android:id="@+id/order_pick_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="提货单号:"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_12"
        android:visibility="gone"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共2件合计："
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_12" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/totalMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:text="￥90.00"
            android:textColor="#FE0233"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/secondBtn"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/gray_solid_big_radius_bg"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/firstBtn"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/dark_fifteen_radius_bg"
            android:gravity="center"
            android:visibility="gone"
            android:text="接单"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</LinearLayout>