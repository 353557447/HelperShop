<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlSelectShop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/gray_rectangle">

            <TextView
                android:id="@+id/selectShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/choose"
                android:gravity="center"
                android:text="选择水厂"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />
        </RelativeLayout>


        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/d5"
            app:cardElevation="@dimen/d5"
            android:layout_marginTop="@dimen/d20"
            android:layout_marginRight="@dimen/d12"
            android:layout_marginLeft="@dimen/d12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="空桶管理"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/d15" />

                <android.support.v7.widget.RecyclerView
                    android:layout_marginBottom="@dimen/margin10"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_marginLeft="@dimen/d22"
            android:id="@+id/recordBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="存欠记录"
            android:textColor="@color/textBlack"
            android:textStyle="bold"
            android:textSize="@dimen/d15" />
    </LinearLayout>



    <com.androidkun.xtablayout.XTabLayout
        android:background="@color/white"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="@color/common_red"
        app:xTabIndicatorHeight="@dimen/d2"
        app:xTabIndicatorWidth="@dimen/d30"
        app:xTabIndicatorColor="@color/common_red"
        app:xTabTextColor="@color/textBlack"
        ></com.androidkun.xtablayout.XTabLayout>

    <TextView
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
