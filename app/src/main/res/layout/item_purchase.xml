<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/white_solid_five_radius_bg"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginTop="@dimen/margin5"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@color/color_30adfd" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:padding="@dimen/dp_5"
        android:singleLine="true"
        android:text="空气水"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rebate"
            android:layout_width="28dp"
            android:layout_height="12dp"
            android:background="@drawable/blue_rec_bg"
            android:gravity="center"
            android:text="返利"
            android:textColor="#3D67BC"
            android:textSize="8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/full_reduction"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/red_rec_bg"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="满减"
            android:textColor="#A53533"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥120"
            android:textColor="@color/color_A53533"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:id="@+id/addBtn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:gravity="center"
            android:src="@drawable/to_shopping" />
    </LinearLayout>

</LinearLayout>