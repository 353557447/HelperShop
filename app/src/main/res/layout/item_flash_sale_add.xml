<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/d12"
    android:background="@drawable/white_solid_five_radius_bg"
    android:paddingTop="@dimen/padding16">

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#30eeeeee" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goods_img"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/goods_img"
        android:maxLines="2"
        android:text="美汁源 Minute Maid 果粒橙 果汁饮料"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView

        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin10"
        android:layout_toRightOf="@+id/goods_img"
        android:text="￥20"
        android:textColor="@color/textRed"
        android:textSize="13sp" />

    <TextView
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:layout_alignBottom="@id/goods_img"
        android:id="@+id/reference_price"
        android:layout_toRightOf="@id/goods_price"
        style="@style/textGray13"
        android:text="￥19" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repertory_counts"
            style="@style/textGray11"
            android:text="库存:100" />

        <TextView
            android:id="@+id/sale_limit_counts"
            style="@style/textGray11"
            android:layout_marginLeft="@dimen/margin20"
            android:text="限购:10" />

        <TextView
            android:id="@+id/sale_counts"
            style="@style/textGray11"
            android:layout_marginLeft="@dimen/margin20"
            android:text="销量:100" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/margin10"
        android:layout_alignParentRight="true"
        android:layout_below="@id/goods_img"
        android:textColor="#FE0233"
        android:text="删除"
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flash_sale_delete_icon" />

    <TextView
        android:textColor="@color/textYellow"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginRight="@dimen/margin16"
        android:text="编辑"
        android:layout_toLeftOf="@id/delete"
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_img"
        />
</RelativeLayout>