<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_260"
    android:layout_height="@dimen/dp_200"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_purchase_amount_dialog_top_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:text="编辑购买数量"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_30"
            android:paddingTop="@dimen/dp_30">

            <TextView
                android:id="@+id/cutBtn"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/bg_cut"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <EditText
                android:id="@+id/editNum"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/bg_cut"
                android:digits="1234567890"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/addBtn"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/bg_cut"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bg_left"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16" />


        <TextView
            android:id="@+id/confirmBtn"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bg_right"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</LinearLayout>