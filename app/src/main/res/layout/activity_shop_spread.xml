<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/color_ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:src="@drawable/morenshuidian" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/shopType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自营店"
                            android:visibility="invisible"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/startNum"
                        style="@style/commentStartRatingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:numStars="5"
                        android:rating="5"
                        android:isIndicator="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/orderCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="销量:"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/font_10" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距离："
                            android:visibility="invisible"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/font_10" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deliverFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送费:0元"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/font_10" />

                <TextView
                    android:id="@+id/freeHint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="满0免配送费"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/font_10" />

                <TextView
                    android:id="@+id/sendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时内：0米"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/font_10" />
            </LinearLayout>
        </LinearLayout>

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#FFF"
            app:xTabIndicatorColor="@color/common_red"
            app:xTabIndicatorHeight="@dimen/d2"
            app:xTabIndicatorWidth="@dimen/d30"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/common_red"
            app:xTabSelectedTextSize="@dimen/d15"
            app:xTabTextColor="#161616"
            app:xTabTextSelectedBold="true"
            app:xTabTextSize="@dimen/d13"></com.androidkun.xtablayout.XTabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>

    <TextView
        android:id="@+id/share_shop"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="分享店铺"
        android:background="#FF4D14"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>
</LinearLayout>