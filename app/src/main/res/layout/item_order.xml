<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号:12531646131634613133131"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_30adfd"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:text="下单时间:2017-8-21 12:30:50"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_12" />

    <View style="@style/line" />

    <TextView
        android:id="@+id/shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableLeft="@drawable/shop"
        android:drawablePadding="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="空气水水店1000分店"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <LinearLayout
        android:id="@+id/llBuyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系人:哈哈"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_10" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="送水地址:深圳市福田区华能大厦"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_10" />

            <TextView
                android:id="@+id/sendTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="送水时间:2小时内"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_10" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="备注:速度速速来"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/bucket"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/blue_stroke_big_radius_bg"
            android:gravity="center"
            android:text="无桶"
            android:textColor="#505E84"
            android:textSize="@dimen/font_10" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="共2件"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/totalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:text="合计：900元"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/secondBtn"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/gray_line_rectangle"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/firstBtn"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/dark_fifteen_radius_bg"
            android:gravity="center"
            android:text="接单"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</LinearLayout>