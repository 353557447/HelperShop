<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    tools:context="com.shuiwangzhijia.shuidian.ui.RechargeCouponPayActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="下单时间："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:text="￥0"
                android:textColor="@color/textRed"
                android:textSize="@dimen/font_28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="在线支付"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_16" />

                <CheckBox
                    android:clickable="false"
                    android:checked="true"
                    android:id="@+id/onlineBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/common_check_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/weixin"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="微信支付"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:checked="true"
                        android:id="@+id/weChatBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/common_check_selector" />
                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/zhifubao"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="支付宝支付"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/aliPayBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/common_check_selector" />
                </LinearLayout>

                <View
                    android:visibility="gone"
                    style="@style/line"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/yuer"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="余额支付"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/yuer_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/check_pay" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/cash_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="货到付款"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_16" />

                <CheckBox
                    android:id="@+id/offlineBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/bg_check" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/payBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/dark_fifteen_radius_bg"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />
</LinearLayout>
