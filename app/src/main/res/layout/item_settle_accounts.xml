<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/white_solid_five_radius_bg"
    android:paddingLeft="@dimen/padding16"
    android:paddingRight="@dimen/padding16"
    >
<LinearLayout
    android:layout_marginTop="@dimen/margin16"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_num"
        android:text="订单号：23525623523223522"
        style="@style/textBlack14" />

        <TextView
            android:layout_marginTop="@dimen/margin5"
            android:id="@+id/order_time"
            android:text="下单时间：2019-02-28 16:52:26"
            style="@style/textBlack14" />
    <TextView
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1" />

    <android.support.v7.widget.RecyclerView
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/margin5"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    <TextView
        android:layout_marginTop="@dimen/margin10"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/d16"
        android:layout_below="@id/ll"
        android:id="@+id/total_counts"
        android:text="共200桶"
        android:layout_alignParentRight="true"
        android:textColor="@color/common_red"
        android:textSize="@dimen/d14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>


</RelativeLayout>