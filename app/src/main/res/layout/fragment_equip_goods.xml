<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context="com.shuiwangzhijia.shuidian.newmodule.fragment.EquipGoodsFragment">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/root_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/type_rv"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:background="@color/bgColor"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="@dimen/margin10"
                    android:id="@+id/type_name"
                    style="@style/textBlack13"
                    android:layout_marginBottom="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                   />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/details_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/no_equip_goods_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_equip_goods_data" />

        <TextView
            style="@style/textGray14"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d10"
            android:text="还没有商品哦~" />

        <Button
            android:id="@+id/add_immediately"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:background="@drawable/common_confirm_bg"
            android:text="立即添加"
            android:textColor="@color/white"
            android:textSize="@dimen/d18" />
    </LinearLayout>

</FrameLayout>
