<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tongji_red_bg" />

        <RelativeLayout
            android:id="@+id/title_bar_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <RelativeLayout
                android:id="@+id/back_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_60"
                    android:src="@drawable/back" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:text="店铺统计"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d80"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rlBuy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                style="@style/textWhite16"
                android:layout_marginLeft="@dimen/d30"
                android:text="采购统计"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/buyCount"
                        style="@style/textWhite18"
                        android:layout_gravity="center_horizontal"
                        android:text="23" />

                    <TextView
                        style="@style/textWhite14"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="采购量" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/d1"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/buyMoney"
                        style="@style/textWhite18"
                        android:layout_gravity="center_horizontal"
                        android:text="23" />

                    <TextView
                        style="@style/textWhite14"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="总金额" />

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rlOrder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                style="@style/textWhite16"
                android:layout_marginLeft="@dimen/d30"
                android:layout_marginTop="@dimen/margin10"
                android:text="订单统计"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/orderCount"
                        style="@style/textWhite18"
                        android:layout_gravity="center_horizontal"
                        android:text="23" />

                    <TextView
                        style="@style/textWhite14"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="订单总数" />

                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/d1"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/orderMoney"
                        style="@style/textWhite18"
                        android:layout_gravity="center_horizontal"
                        android:text="23" />

                    <TextView
                        style="@style/textWhite14"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="总金额" />

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>