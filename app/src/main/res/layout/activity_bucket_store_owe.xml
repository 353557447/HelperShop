<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="水厂名称:"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14" />

    <View
        android:visibility="gone"
        style="@style/line" />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"></android.support.v7.widget.RecyclerView>

    <com.androidkun.xtablayout.XTabLayout
        android:background="@color/white"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/common_red"
        app:xTabIndicatorHeight="@dimen/d2"
        app:xTabIndicatorWidth="@dimen/d30"
        app:xTabIndicatorColor="@color/common_red"
        app:xTabTextColor="@color/textBlack"
        ></com.androidkun.xtablayout.XTabLayout>
    <View
        style="@style/line" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
