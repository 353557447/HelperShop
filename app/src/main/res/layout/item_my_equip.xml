<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:scaleType="centerInside"
        android:id="@+id/equip_iv"
        android:layout_width="80dp"
        android:layout_height="104dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/default_img" />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/equip_iv"
        android:layout_marginTop="@dimen/margin10"
        android:layout_toRightOf="@id/equip_iv"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/equip_name"
                style="@style/textBlack14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin16"
                android:layout_marginRight="@dimen/d70"
                android:ellipsize="end"
                android:lines="1"
                />

            <LinearLayout
                android:id="@+id/check_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin5"
                    android:src="@drawable/check_address" />

                <TextView
                    style="@style/textGray13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin10"
                    android:text="查看地址" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saling_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a55b4fe_stroke_bg"
                android:paddingBottom="@dimen/padding3"
                android:paddingLeft="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:paddingTop="@dimen/padding3"
                android:textColor="#55B4FE"
                android:textSize="@dimen/d9" />

            <TextView
                android:id="@+id/leisure_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin16"
                android:background="@drawable/fc804f_stroke_bg"
                android:paddingBottom="@dimen/padding3"
                android:paddingLeft="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:paddingTop="@dimen/padding3"
                android:textColor="#FC804F"
                android:textSize="@dimen/d9" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_one"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginTop="@dimen/margin20"
        android:layout_toRightOf="@id/equip_iv"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/today_earnings"
                style="@style/textGray10"
                />

            <TextView
                android:id="@+id/today_sales_counts"
                style="@style/textGray10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin10"
              />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5">

            <TextView
                android:id="@+id/total_earnings"
                style="@style/textGray10"
                />

            <TextView
                android:id="@+id/total_sales_counts"
                style="@style/textGray10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin10"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_two"
        android:layout_marginLeft="@dimen/d91"
        android:layout_marginRight="@dimen/margin10"
        android:background="@color/lineColor" />
</RelativeLayout>
