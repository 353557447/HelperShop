<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/d45"
        android:layout_marginRight="@dimen/margin16"
        android:text="联系客服"
        android:textSize="@dimen/d14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d40"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_marginTop="@dimen/d80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/d40"
        android:paddingRight="@dimen/d40">

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:background="@null"
            android:drawablePadding="@dimen/d10"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/textBlack"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />
        <!--13312345678 123456-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginTop="@dimen/d18"
            android:layout_marginBottom="@dimen/d18"
            android:background="#FE0149" />

        <EditText
            android:id="@+id/editPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:background="@null"
            android:drawablePadding="@dimen/d10"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="text"
            android:textColor="@color/textBlack"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginTop="@dimen/d18"
            android:background="#FE0149" />
    </LinearLayout>

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:layout_marginLeft="@dimen/d40"
        android:layout_marginTop="@dimen/d50"
        android:layout_marginRight="@dimen/d40"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/d16" />
</LinearLayout>