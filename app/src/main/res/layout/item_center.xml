<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回环水厂"
            android:textColor="#191919"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fold_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="6dp"
            android:text="展开优惠"
            android:textColor="#9A9999"
            android:textSize="11sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/manjian_ll"
        android:padding="@dimen/d10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_five_radius_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/manjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_solid_two_radius_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/padding10"
                android:paddingTop="@dimen/padding3"
                android:paddingRight="@dimen/padding10"
                android:paddingBottom="@dimen/padding3"
                android:text="满减"
                android:textColor="#ffffff"
                android:textSize="@dimen/d10" />

            <TextView
                android:id="@+id/full_reduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="部分商品满100立减20"
                android:textColor="#FF4D14"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fanli_ll"
        android:padding="@dimen/d10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_five_radius_bg"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_solid_two_radius_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/padding10"
            android:paddingTop="@dimen/padding3"
            android:paddingRight="@dimen/padding10"
            android:paddingBottom="@dimen/padding3"
            android:text="返利"
            android:textColor="@color/white"
            android:textSize="@dimen/d10" />

        <TextView
            android:id="@+id/rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="指定商品参加下单返利"
            android:textColor="#FF4D14"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/d10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_five_radius_bg"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chongzhi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_solid_two_radius_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/padding10"
            android:paddingTop="@dimen/padding3"
            android:paddingRight="@dimen/padding10"
            android:paddingBottom="@dimen/padding3"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="@dimen/d10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="优惠充值大放送"
            android:textColor="#FF4D14"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/top_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:textColor="@color/textBlack"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/top_up"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_gravity="right"
        android:background="@drawable/dark_blue_fifteen_radius_bg"
        android:gravity="center"
        android:text="购买"
        android:textColor="#FFF"
        android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

