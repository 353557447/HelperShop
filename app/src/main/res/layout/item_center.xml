<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回环水厂"
                android:textSize="15sp"
                android:textColor="#191919"/>
            <TextView
                android:id="@+id/fold_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_down"
                android:drawablePadding="6dp"
                android:text="展开优惠"
                android:textSize="11sp"
                android:textColor="#9A9999"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/manjian_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/manjian"
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:text="满减"
                android:textColor="#A53533"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/red_rec_bg"/>

            <TextView
                android:id="@+id/full_reduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="部分商品满100立减20"
                android:textSize="12sp"
                android:textColor="#494848"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/fanli_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:text="返利"
                android:textColor="#3D67BC"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/blue_rec_bg"/>

            <TextView
                android:id="@+id/rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="指定商品参加下单返利"
                android:textSize="12sp"
                android:textColor="#494848"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/chongzhi_btn"
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:text="充值"
                android:textColor="#FF9600"
                android:textSize="8sp"
                android:gravity="center"
                android:background="@drawable/yellow_rec_bg"/>

            <TextView
                android:id="@+id/top_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充1000赠200，充2000赠500，充3000赠1200，充
3000赠1300，充4000赠1500"
                android:layout_marginLeft="9dp"
                android:textSize="12sp"
                android:textColor="#494848"/>
        </LinearLayout>

        <TextView
            android:id="@+id/top_up"
            android:layout_width="68dp"
            android:layout_height="26dp"
            android:text="充值"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="right"
            android:background="@drawable/dark_blue_fifteen_radius_bg"/>
    </LinearLayout>

</android.support.v7.widget.CardView>