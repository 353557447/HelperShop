<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/keyongshuipiao"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ticketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="水票名称"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="原价 "
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ticketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="￥130"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14"
            android:visibility="gone" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/leftTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="剩余8张"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/totalTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leftTicket"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="共20张"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_10"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:button="@drawable/white_bg_check"
            android:visibility="gone" />

        <TextView
            android:id="@+id/buyBtn"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_line_rectangle"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/switch_selector"
            android:gravity="center_vertical"
            android:text="营业中"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_12"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="10"
            android:text="水店"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/limitDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="有限期：2018-8-20~2018-12-30"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</LinearLayout>