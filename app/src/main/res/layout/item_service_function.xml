<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d70"
    android:orientation="horizontal">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d2"
        app:sl_shadowColor="#15eeeeee"
        >


        <LinearLayout
            android:background="@drawable/white_solid_five_radius_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/function_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin16" />

            <TextView
                android:id="@+id/function_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:text="店铺设置"
                android:textColor="#262525" />
        </LinearLayout>
    </com.dd.ShadowLayout>

</RelativeLayout>